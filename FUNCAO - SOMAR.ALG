algoritmo "Funcao - Somar"

funcao somar(a, b: inteiro): inteiro
var
   resultado: inteiro
inicio

    resultado <- a + b
    
    // Valor a ser retornado pela função
    retorne resultado

fimfuncao


var

   // Variáveis globais
   retorno: inteiro

inicio

   retorno <- somar(5,2)
   
   escreval("Valor de retorno da função: ", retorno)

fimalgoritmo