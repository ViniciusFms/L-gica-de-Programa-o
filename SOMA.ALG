algoritmo "Soma"
var

   a, b, soma: inteiro

inicio

   // ENTRADA DE DADOS
   escreva("Digite o primeiro número: ")
   leia(a)
   escreva("Digite o segundo número: ")
   leia(b)
   
   // PROCESSAMENTO DE DADOS
   soma <- a + b
   
   // SAÍDA DE DADOS
   escreva("O resultado da soma entre ",a," e ", b)
   escreva(" é igual a ", soma)

fimalgoritmo