algoritmo "Exemplo escolha"
var

   codigo: inteiro

inicio

   escreva("Digite um código: ")
   leia(codigo)

   escolha(codigo)
      caso 1
         escreval("Funcionário 1")
      caso 2
         escreval("Funcionário 2")
      caso 3
         escreval("Funcionário 3")
      outrocaso
         escreval("Funcionário não encontrado")

   fimescolha

fimalgoritmo