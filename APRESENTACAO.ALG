algoritmo "Apresentacao"
var

   nome: caracter
   sobrenome: caracter
   curso: caracter
   cidade: caracter

inicio

   nome <- "Harry"
   sobrenome <- "Potter"
   cidade <- "Sao Paulo"
   curso <- "Super Dev"

   escreval("Olá")
   escreval("Meu nome é ", nome, " ", sobrenome)
   escreval("Nasci na cidade de ", cidade)
   escreval("Estou estudando no ", curso)

fimalgoritmo